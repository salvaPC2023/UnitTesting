  "devDependencies": {
    "@babel/core": "^7.21.3",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "cypress": "^12.8.1",
    "mocha": "^11.1.0",
    "mochawesome": "^7.1.3",
    "nyc": "^17.1.0",
    "parcel": "^2.8.3",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10"
  }
}
